
@{
    Layout = null;
}
@model KhachHang


<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0, shrink-to-fit=no">
    <title>Đăng Nhập</title>

    <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.3/dist/css/bootstrap.min.css" rel="stylesheet" integrity="sha384-QWTKZyjpPEjISv5WaRU9OFeRpok6YctnYmDr5pNlyT2bRjXh0JMhjY6hW+ALEwIH" crossorigin="anonymous">

</head>
<body style="background-color: #2B2D42;">
    <div id="wrapper">
        <div class="container">
            <div class="row justify-content-around">
                <div class="col-md-6 p-3 my-3" style="background-color: #EDF2F4;">

                    @using (Html.BeginForm("Login", "Access", FormMethod.Post))
                    {
                
                        <h1 class="text-center text-uppercase h3 py-3">Đăng nhập</h1>


                        <div class="form-group">
                            <label for="tenDangNhap">Tên đăng nhập</label>
                            @Html.TextBoxFor(x => x.TenDangNhap, new
                                {
                                    @class = "form-control form-control-lg",
                                    placeholder = "TenDangNhap",
                                    required = "required",
                                    autofocus = "autofocus"
                                })
                            @* <input type="text" name="tenDangNhap" id="tenDangNhap" class="form-control" required> *@

                        </div>

                        <div class="form-group my-2">
                            <label for="matKhau">Mật khẩu</label>
                            @Html.TextBoxFor(x => x.Mk, new { @class = "form-control form-control-lg", type = "password", placeholder = "Mk" })
                            @* <input type="password" name="matKhau" id="matKhau" class="form-control" required> *@

                        </div>


                        @* <input type="submit" value="Đăng nhập" class="btn p-2 my-3 auth-form-btn" style="background-color: #EF233C;"> *@
                        <button class=" btn p-2 my-3 auth-form-btn" type="submit" style="background-color: #EF233C;">SIGN IN</button>
                        <br />
                        <input type="submit" value="Đăng ký" class="btn p-2 " style="background-color: #EF233C;">
               
                    }
                </div>

            </div>
        </div>
    </div>


    <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.3/dist/js/bootstrap.bundle.min.js " integrity="sha384-YvpcrYf0tY3lHB60NNkmXc5s9fDVZLESaAA55NDzOxhy9GkcIdslK1eN7N6jIeHz " crossorigin="anonymous "></script>

</body>
</html>
